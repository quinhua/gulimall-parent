<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.qh.guli.mapper.PlatformPropertyKeyMapper">

    <select id="getPropertyKeyByCategoryId" resultType="pers.qh.guli.entity.PlatformPropertyKey">
        SELECT
        *
        FROM
        platform_property_key a
        <where>
            <if test="category1Id!=null and category1Id!=0">
                or ( a.category_id = #{category1Id} AND a.category_level = 1 )
            </if>
            <if test="category2Id!=null and category2Id!=0">
                or ( a.category_id = #{category2Id} AND a.category_level = 2 )
            </if>
            <if test="category3Id!=null and category3Id!=0">
                or ( a.category_id = #{category3Id} AND a.category_level = 3 )
            </if>
        </where>
    </select>

    <resultMap id="platformPropertyMap" type="pers.qh.guli.entity.PlatformPropertyKey" autoMapping="true">
        <id property="id" column="id"></id>
        <collection property="propertyValueList" ofType="pers.qh.guli.entity.PlatformPropertyValue" autoMapping="true">
            <id property="id" column="property_value_id"></id>
        </collection>
    </resultMap>
    <select id="getPlatformPropertyKeyByCategoryId" resultMap="platformPropertyMap">
        SELECT
        a.id,
        a.property_key,
        a.category_id,
        a.category_level,
        b.id property_value_id,
        b.property_value,
        b.property_key_id
        FROM
        platform_property_key a
        INNER JOIN platform_property_value b ON a.id = b.property_key_id
        <where>
            <if test="category1Id!=null and category1Id!=0">
                or ( a.category_id = #{category1Id} AND a.category_level = 1 )
            </if>
            <if test="category2Id!=null and category2Id!=0">
                or ( a.category_id = #{category2Id} AND a.category_level = 2 )
            </if>
            <if test="category3Id!=null and category3Id!=0">
                or ( a.category_id = #{category3Id} AND a.category_level = 3 )
            </if>
        </where>
    </select>
</mapper>
